/* pages/content/content.wxss */
.home-page {
  height: 160rpx;
  width: 100%;
  border: 1rpx solid red;
  font-size: 60rpx;
}
.line{
  width: 750rpx;
  height: 2rpx;
  background-color: #F2F2F2;
  margin: 0rpx auto 0 auto;
}
.header{
  margin-top: 24rpx;
  height:200rpx;
}
.header-title{
  flex-direction: row;
  display: flex;
  width: 100%;
  padding-left:35%;
  vertical-align: bottom;
}
.title-name{
  font-size:38rpx;
  margin-bottom: 20rpx;
  color:#C0C0C0;
  text-align: center;
  width:100%;
}
.title-category{
  font-size: 26rpx;
  margin:auto 0;
  border: 2rpx solid #303030;
  margin-left:3%;
  border-radius: 12rpx;
  height:30rpx;
  width:72rpx;
  text-align: center;
}
.header-detail{
  display:flex;
  flex-direction: row;
  justify-content: space-between;
}
.header-publisher,.header-photographer{
  width: 50%;
  display: flex;
  flex-direction: row;
  padding-top:38rpx;
  padding-left:36rpx;
}
.avator{
  height: 40px;
  width: 40px;
  border-radius: 20px;

}
.publisher-name,.photographer-name{
  display: flex;
  flex-direction: column;
  margin-top:2rpx;
  margin-left:14rpx;
}
.publisher-name-title,.photographer-name-title{
  font-size:24rpx;
  color:#cdcdcd;
}
.publisher-name-text,.photographer-name-text{
  font-size:28rpx;
  color:#303030;
}
.concernButton{
  height:44rpx;
  width:108rpx;
  display: flex;
  flex-direction: row;
  border:2rpx solid #c63c3c;
  border-radius:22rpx;
  font-size:32rpx;
  color:#c63c3c;
  margin-top:24rpx;
  margin-left:12rpx;
}
.button-text{
  margin: 0 auto;
}
.content-area{
  font-size: 30rpx;
  height: 500rpx;
  padding-top:20rpx;
}
.publishInformation{
  font-size: 26rpx;
  color: #C0C0C0;
  margin: 20rpx 0 0 20rpx;
}
.place-area{
  display: flex;
  flex-direction: row;
  color:#2d8cf0;
  margin:40rpx 0 0 20rpx;
}
.location{
  margin-top: 5rpx;
}
.dingwei{
  width: 50rpx;
  height: 50rpx;
  margin-right:12rpx;
}
.photo-detail{
  color:#6c3b96;
  margin: 35rpx 0 16rpx 20rpx;
}
.style{
  margin-bottom: 16rpx;
}
.article{
  margin-left:20rpx;
  letter-spacing: 2rpx;
}
.zhankai{
  float:right;
  margin-top:24rpx;
  margin-right:20rpx;
  font-weight: bold;
}
.bottom-bar{
  bottom: 0;
  position: fixed;
  z-index: 9999;
  height: 120rpx;
  width: 100%;
  background: white;
  border-top: 2rpx #F2F2F2 solid;
}
.bottom-bar.iphoneX-height{
    padding-bottom: 30rpx;
}
.bottom-bar-area{
  margin-top:20rpx;
  margin-left:54rpx;
  margin-right: 54rpx;
  width: 100%;
  display: flex;
  flex-direction: row;
  color:#808695;
}
.bottom-bar-icon-area{
  display: flex;
  flex-direction: row;
  width: 18%;
}
.bottom-bar-icon{
  width: 50rpx;
  height:50rpx;
  
}
.bottom-bar-text{
  margin-left:12rpx;
  font-size: 30rpx;
}
/*确定*/
.bottom-tab{
  bottom:0;
  height: 118rpx;
  width: 100%;
  background: linear-gradient(to right, #5594ff , #3bc3ff);
  position: fixed;
  z-index: 9999;
}
.bottom-tab.iphoneX-height{
    padding-bottom: 20rpx;
}
.tab-content{
  flex-direction: row;
  display: flex;
  justify-content:center;
  align-content: center;
    font-size: 60rpx;
}
.confirm{ 
  color: #ffffff;
  font-size: 36rpx;
  margin-top: 30rpx;
  align-content: center;
  justify-content: center;
}


/*头部选择提示*/
.select-top{
  display: flex;
  flex-direction: row;
  /* border-bottom: 1px #999999 solid;
  line-height: 100rpx; */
}
.select-top .choose{
  width: 150rpx;
  margin-top: 20rpx;
  margin-left: 60rpx;
}
.select-top .choose text{
  font-size: 30rpx;
  color: #999999;
}
/*选中的日期*/
.choosedate{
  margin-top: 20rpx;
  margin-left: 60rpx;
  width: 250rpx;
  font-size: 30rpx;
  color: #4094dd;
}
/*换一天*/
.changeday{
  margin-top: 20rpx;
  margin-left: 50rpx;
  width: 120rpx;
  height: 40rpx;
  font-size: 30rpx;
  color: #4094dd;
  text-align: center;
  border-radius: 10rpx;
  border: 1px #4094dd solid;
}
/*分割线*/
.cutline{
  height: 1rpx;
  background: #999999;
  width: 100%;
  margin-top: 30rpx;
}
/*头部提示*/
.tips{
  margin-top: 20rpx;
  text-align: center;
  font-size: 30rpx;
  color: #999999;
}



/*时间选择*/
.time{
  width: 88%;
  display: flex;
  flex-wrap: wrap;
  justify-content: flex-start;
  margin: 0 auto;
  margin-top: 10rpx;
}
.time .listItem{
  width: 17%;
  height: 60rpx;
  margin-left: 26rpx;
  margin-right: 26rpx;
  text-align: center;
  box-sizing: border-box;
  background-color: #fff;
  margin-top: 50rpx;
  /* padding-top: 35rpx; */
  /* border: 1px solid #b9c1c8; */
}
.time .listItem text{
  margin-top: 4rpx;
  display: block;
  font-size: 36rpx;
}
.time .current{
  width: 17%;
  background: #f6d451;
  border-radius: 20rpx;
  /* border: 1px solid #76aef8; */
}
.time .current text{
  color: #fff;
}

/*底部导航*/
/*确定*/
.bottom-tab{
  bottom:0;
  height: 118rpx;
  width: 100%;
  background: linear-gradient(to right, #5594ff , #3bc3ff);
  position: fixed;
  z-index: 9999;
}
.bottom-tab.iphoneX-height{
    padding-bottom: 20rpx;
}
.tab-content{
  flex-direction: row;
  display: flex;
  justify-content:center;
  align-content: center;
    font-size: 60rpx;
}
.confirm{ 
  color: #ffffff;
  font-size: 36rpx;
  margin-top: 30rpx;
  align-content: center;
  justify-content: center;
}
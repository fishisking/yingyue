/*分割线*/
.divLine{
 background: #cacaca;
 width: 100%;
 height: 3rpx;
}
.little-divLine{
  background: #cacaca;
  width: 595rpx;
  height: 1rpx;
  float: right
}

/*点赞信息主体*/
.dianzan-item{
  flex-direction: row;
  display: flex;
  width: 100%;
  height: 205rpx;
}
.dianzan-item .myicon{
  flex-grow: 1;
  padding-left: 24rpx;
  padding-top: 24rpx;
}
.dianzan-item .myicon image{
  align-items: center;
  width: 120rpx;
  height: 120rpx;
  border-radius: 80rpx;
}
.dianzan-item .content{
  flex-grow: 3;
  padding-top: 30rpx;
}
.dianzan-item .content .username{
  font-size: 36rpx;
  color: black;
  margin-left: -18rpx;  
  font-weight: 500;
}
.dianzan-item .content .zan{
  font-size: 32rpx;
  color: black;
  margin-top: 8rpx;
  margin-left: -18rpx;  
  font-weight: 500;
}
.dianzan-item .content .lasttime{
  font-size: 26rpx;
  color: #666666;
  margin-top: 22rpx;
  margin-left: -18rpx;  
}
.dianzan-item .pic{
  flex-grow: 2;
  padding-top: 24rpx;
  padding-right: 24rpx;
}
.dianzan-item .pic image{
  width:200rpx;
  float: right;

}